<div>
  <div>
    <p>
      Post #<%= @post.id %> by <%= @post.author.name %>
    </p>
    <p>
      Comments: <%= @post.comments_counter %> Likes: <%= @post.likes_counter %>
    </p>
  </div>
  <p>
    <%= @post.text %>
  </p>
</div>
<div>
  <% @post.comments.each do |comment| %>
    <p>
      <%= comment.author.name %> : <%= comment.text %>
    </p>
  <% end %>
</div>